<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DAD2D2"
    android:weightSum="7"
    tools:context=".MainActivity">
<TextView
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:textSize="40dp"
    android:text=""
    android:layout_weight="2"
     android:gravity="bottom|right"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp"
    android:id="@+id/textViewId"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_weight="1"

        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="clear"
            android:textSize="20sp"
            android:layout_weight="3"
            android:onClick="clear"
            android:background="#1961CD"

            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="back"
            android:textSize="20sp"
            android:layout_weight="1"
            android:onClick="back"
            android:background="#1961CD"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
       android:layout_weight="1"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="#F0F1F4"
            android:onClick="numOne"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="#fff"
            android:onClick="numTwo"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="20sp"
            android:layout_weight="1"
            android:onClick="numThree"
        android:background="#fff"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="+"
            android:textSize="20sp"
            android:onClick="numPlus"
            android:layout_weight="1"
            android:background="#673AB7"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="20sp"
            android:layout_weight="1"
            android:onClick="numFour"
            android:background="#fff"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="5"
            android:onClick="numFive"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="#fff"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="6"
            android:textSize="20sp"
            android:layout_weight="1"
            android:onClick="numSix"
            android:background="#fff"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="20sp"
            android:layout_weight="1"
            android:onClick="numMinus"
            android:background="#673AB7"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="7"
            android:onClick="numSeven"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="#fff"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="8"
            android:onClick="numEight"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="#fff"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="9"
            android:onClick="numNine"
            android:textSize="20sp"
            android:layout_weight="1"
        android:background="#fff"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="*"
            android:onClick="numMulti"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="#673AB7"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:onClick="numZero"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="#fff"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="="
            android:onClick="numEqual"
            android:textSize="20sp"
            android:layout_weight="2"
            android:background="#E91E63"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="/"
            android:onClick="numDived"
            android:textSize="20sp"
            android:layout_weight="1"
            android:background="#673AB7"
            />
    </LinearLayout>





</LinearLayout>